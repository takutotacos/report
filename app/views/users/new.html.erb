<%= render 'shared/links' %>
<p id="notice"><%= notice %></p>
<% @user = User.new unless @user %>
<%= form_for(@user, class:'form-horizontal', role:'form', url: {action: 'create'}) do |f| %>
<%= render 'shared/error_messages' %>
<div class="padding">
    <div class="form-inline form-group">
        <%= f.label 'ユーザID' %><br>
        <%= f.text_field :user_id, class: 'form-control' %>
    </div>
    <div class="form-inline form-group">
        <%= f.label 'ユーザ名' %><br>
        <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <p>グループ名</p>
    <div class="form-inline form-group">
      <%= collection_check_boxes(:group, :group_ids, Group.all, :group_id, :group_name) do |g| %>
        <% g.label {g.check_box + g.text } %>
      <% end %>
    </div>

    <div class="form-inline form-group">
        <%= f.label 'パスワード' %><br>
        <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-inline form-group">
        <%= f.label '確認用パスワード' %><br>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="col-xs-offset-3 col-xs-1" align="right">
        <%= f.submit '登録', class: 'btn btn-primary', data: { disable_with: '登録中です。' } %>
    </div>
    <% end %>
